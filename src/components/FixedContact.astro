---
import InlineSVG from "./InlineSVG.astro";
const allSocials = await Astro.glob('../content/socials/*.md');
allSocials.sort( (a, b) => Date.parse(a.frontmatter.order) - Date.parse(b.frontmatter.order) );
---

<aside>
    <div class="layout-container">
        <ul class="social">
        {
        allSocials.map( (social, index) => (
            <li class={`social-${social.frontmatter.slug}`} style={`--i: ${index};`}>
            <a href="https://www.linkedin.com/in/filipe-gomes-duarte/" title="LinkedIn" target="_blank">
                <p class="hidden">{social.frontmatter.title}</p>
                <InlineSVG src={social.frontmatter.icon} style="width:24px;height:24px;" />
            </a>
        </li>
        ))
        }
        </ul>
        <a href="#contact" class="button-primary">Entrar em contato</a>
    </div>
</aside>
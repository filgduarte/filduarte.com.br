---
import ContactForm from "../components/ContactForm.astro";
import ContactSocial from "../components/ContactSocial.astro";
---

<section id="contact">
    <div class="layout-container">
        <h2>Contato</h2>
        <ContactSocial />
        <ContactForm />
    </div>
</section>

<style>
section#contact {
    display: flex;
    align-items: center;
    padding: 88px 0 0;
    max-width: 100%;
    background-image: linear-gradient(
                        rgb(var(--color-background-rgb) / 0),
                        var(--color-secondary)
                    );
}

#contact .layout-container {
    padding: 2rem;
}

@media (min-width: 768px) {
    #contact .layout-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem 3rem;
    }
    
    #contact h2 {
        grid-column-start: 1;
        grid-column-end: 3;
    }
}
</style>